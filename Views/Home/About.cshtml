@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
  ViewData["Title"] = Localizer["PageTitle"];
}

<section class="introduce-section">
  <div class="intro-banner">
    <div class="container">
      <h1>@Localizer["IntroHeading"]</h1>
    </div>
  </div>
</section>

<section>
  <div class="container intro-content-2col">
    <!-- Cột trái: văn bản -->
    <div class="intro-text">
      <h2>@Localizer["BrandTitle"]</h2>
      <p>@Localizer["BrandParagraph1"]</p>
      <p>@Localizer["BrandParagraph2"]</p>
      <p>@Localizer["BrandParagraph3"]</p>
    </div>

    <!-- Cột phải: video -->
    <div class="intro-video">
      <div class="video-wrapper">
        <iframe src="https://www.youtube.com/embed/h1AkwbJ-7H0?start=2" title="Texas Chicken Video" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>
  </div>

  <div class="about-text">
    <h2>@Localizer["TimelineIntro"]</h2>
  </div>

