      <div class="timeline-item">
        <img src="/images/About/buaan.png" alt="Bữa ăn huyền thoại" />
        <p>@Localizer["Timeline2020_1"]</p>
      </div>
      <div class="timeline-item">
        <img src="/images/About/disan.png" alt="Di sản Texas" />
