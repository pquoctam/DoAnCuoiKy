</section>

@section Styles {
  <style>
    .introduce-section {
      font-family: sans-serif;
      color: #333333;
    }

    .intro-banner {
      background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('https://texaschickenvn.com/vnt_upload/weblink/banner_6.jpg') center/cover no-repeat;
      height: 31.25rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .intro-banner h1 {
      color: #f8b02d;
      font-size: 3.125rem;
      text-align: center;
      font-weight: bold;
    }

    .intro-content-2col {
      display: flex;
      flex-wrap: wrap;
      gap: 6.25rem;
      padding: 40px 20px;
      max-width: 1200px;
      margin: 3rem auto;
      align-items: flex-start;
    }

    .intro-text,
    .intro-video {
      flex: 1 1 500px;
    }

    .intro-text {
      font-size: 16px;
      line-height: 1.7;
      text-align: justify;
    }

    .intro-text p {
      margin-bottom: 1rem;
    }

    .intro-text h2 {
      color: #9a3324;
      margin-bottom: 16px;
      font-size: 2.5rem;
    }

    .video-wrapper {
      position: relative;
      padding-bottom: 90%;
      height: 0;
      overflow: hidden;
      border-radius: 1rem;
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.2);
    }

    .video-wrapper iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    .about-text {
      font-size: 1.7rem;
      text-align: center;
      background-color: #9a3324;
      padding-top: 1.5rem;
      padding-block: 1.5rem;
      color: #f8b02d;
    }

    .timeline-section {
      padding: 40px 0;
      width: 100vw;
      margin-left: calc(-50vw + 50%);
      position: relative;
    }

    .timeline-title {
      font-size: 48px;
      /* tăng size, mặc định của bạn là 28px */
      font-weight: 900;
      /* dày hơn (bold mạnh hơn 700) */
      text-transform: uppercase;
      text-align: center;
      margin-top: 1.5rem;
      margin-bottom: 3.5rem;
    }

    .timeline-grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      max-width: 1000px;
      margin: 0 auto;
    }

    .timeline-item {
      width: 250px;
      line-height: 1.5rem;
    }

    .timeline-item img {
      width: 100%;
      border-radius: 8px;
      object-fit: cover;
    }

    /* Màu nền cho từng phần */
    .bg-1950 {
      background-color: #fff;
    }

    .bg-1960 {
      background-color: #a39382;
    }

    .bg-1970 {
      background-color: #4a773c;
    }

    .bg-1980 {
      background-color: #d14124;
    }

    .bg-1990 {
      background-color: #3a5382;
    }

    .bg-2000 {
      background-color: #d76b00;
    }

    .bg-2010 {
      background-color: #9a3324;
    }

    .bg-2020 {
      background-color: #e0a526;
    }

    .title-1950 {
      color: #9a3324 !important;
    }

    .title-1960 {
      color: white !important;
    }

    .title-1970 {
      color: white !important;
    }

    .bg-1970 .timeline-item p {
      color: white;
    }

    .title-1980 {
      color: white !important;
    }

    .bg-1980 .timeline-item p {
      color: white;
    }

    .title-1990 {
      color: white !important;
    }

    .bg-1990 .timeline-item p {
      color: white;
    }

    .title-2000 {
      color: white !important;
    }

    .bg-2000 .timeline-item p {
      color: white;
    }

    .title-2010 {
      color: white !important;
    }

    .bg-2010 .timeline-item p {
      color: white;
    }

    .title-2020 {
      color: white !important;
    }

    .bg-2020 .timeline-item p {
      color: white;
    }

    body {
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }
  </style>
}
