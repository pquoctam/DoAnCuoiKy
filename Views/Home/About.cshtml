        <img src="/images/About/George.png" alt="George W. Church, Sr." />
        <p>@Localizer["Timeline1950_1"]</p>
      </div>
      <div class="timeline-item">
        <img src="/images/About/cuahangtexas.png" alt="Church’s Fried Chicken-To-Go" />
        <p>@Localizer["Timeline1950_2"]</p>
      </div>
      <div class="timeline-item">
        <img src="/images/About/linhvat.png" alt="Churchie linh vật" />
        <p>@Localizer["Timeline1950_3"]</p>
