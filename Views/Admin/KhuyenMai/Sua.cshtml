@model TexasChicken.Models.KhuyenMai

@{
    ViewData["Title"] = "Sửa Khuyến Mãi";
    Layout = "_LayoutAdmin";
}

<div class="page-header">
    <h2>Sửa thông tin khuyến mãi</h2>
    <div class="top-buttons">
        <button type="button" class="btn btn-red" onclick="history.back()">Trở lại</button>
    </div>
</div>

<form asp-action="Sua" method="post">
    <input type="hidden" asp-for="MaKM" />

    <div class="form-group">
        <label>Tên khuyến mãi: <span class="text-danger">(*)</span></label>
        <div class="form-input">
            <input asp-for="TenKM" class="form-control" placeholder="Nhập tên khuyến mãi..." />
            <span asp-validation-for="TenKM" class="text-danger small validation-message"></span>
        </div>
    </div>

    <div class="form-group">
        <label>Loại khuyến mãi: <span class="text-danger">(*)</span></label>
        <div class="form-input">
            <select asp-for="LoaiKM" class="form-control">
                <option value="">-- Chọn loại khuyến mãi --</option>
                <option value="PhanTram" selected="@(Model.LoaiKM == "PhanTram")">Phần trăm (%)</option>
                <option value="TienMat" selected="@(Model.LoaiKM == "TienMat")">Tiền mặt (VNĐ)</option>
            </select>
            <span asp-validation-for="LoaiKM" class="text-danger small validation-message"></span>
        </div>
    </div>

    <div class="form-group">
        <label>Giá trị giảm: <span class="text-danger">(*)</span></label>
        <div class="form-input">
            <input asp-for="GiaTri" class="form-control" placeholder="Ví dụ: 10 hoặc 20000" />
            <span asp-validation-for="GiaTri" class="text-danger small validation-message"></span>
        </div>
    </div>

    <div class="form-group">
        <label>Ngày bắt đầu: <span class="text-danger">(*)</span></label>
        <div class="form-input">
            <input asp-for="NgayBatDau" class="form-control" type="date"
                value="@Model.NgayBatDau.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="NgayBatDau" class="text-danger small validation-message"></span>
        </div>
    </div>

    <div class="form-group">
        <label>Ngày kết thúc: <span class="text-danger">(*)</span></label>
        <div class="form-input">
            <input asp-for="NgayKetThuc" class="form-control" type="date"
                value="@Model.NgayKetThuc.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="NgayKetThuc" class="text-danger small validation-message"></span>
        </div>
    </div>

    <div class="form-group">
        <label>Hiển thị: <span class="text-danger">(*)</span></label>
        <div class="radio-group">
            <label class="custom-radio">
                <input type="radio" name="TrangThai" value="true" checked />
                <span class="radio-mark"></span>
                Hiển thị
            </label>
            <label class="custom-radio">
                <input type="radio" name="TrangThai" value="false" />
                <span class="radio-mark"></span>
                Ẩn
            </label>
        </div>
    </div>

    <div style="margin-top: 20px; padding-left: 310px;">
        <button type="submit" class="btn btn-blue">Lưu thay đổi</button>
        <a href="/KhuyenMai/Index" class="btn btn-gray">Hủy</a>
    </div>
</form>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const loaiKM = document.querySelector('select[name="LoaiKM"]');
            const giaTriInput = document.querySelector('input[name="GiaTri"]');

            function updateGiaTriInput() {
                if (loaiKM.value === 'PhanTram') {
                    giaTriInput.setAttribute('step', '1');
                    giaTriInput.setAttribute('min', '1');
                    giaTriInput.setAttribute('max', '100');

                    // Ngăn không cho nhập dấu phẩy hoặc thập phân
                    giaTriInput.addEventListener('input', function () {
                        this.value = this.value.replace(/[^0-9]/g, '');
                    });
                } else {
                    // Cho phép nhập số bình thường
                    giaTriInput.removeAttribute('step');
                    giaTriInput.removeAttribute('min');
                    giaTriInput.removeAttribute('max');
                    giaTriInput.removeEventListener('input', preventDecimal);
                }
            }

            // Hàm để ngăn thập phân
            function preventDecimal(e) {
                e.target.value = e.target.value.replace(/[^0-9]/g, '');
            }

            // Gọi hàm khi trang load
            updateGiaTriInput();

            // Gọi lại khi người dùng thay đổi loại khuyến mãi
            loaiKM.addEventListener('change', updateGiaTriInput);
        });
    </script>
}

@section Styles {
    <style>
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
        }

        .page-header h2 {
            font-size: 24px;
            font-weight: bold;
            margin: 0;
            padding-bottom: 6px;
            display: flex;
            align-items: center;
        }

        .top-buttons {
            display: flex;
            gap: 7px;
        }

        .form-group {
            margin-bottom: 20px;
            display: flex;
            align-items: flex-start;
            border-bottom: 1px solid #eee;
            padding-bottom: 15px;
            line-height: 1.5;
        }

        .form-group label {
            font-weight: 500;
            display: inline-block;
            width: 200px;
            padding-top: 10px;
        }

        .form-input {
            display: flex;
            flex-direction: column;
        }

        .form-control {
            width: 690px;
            padding: 13px 15px;
            border: 1px solid #ccc;
            margin-left: 7rem;
            font-size: 0.85rem;
            border-radius: 4px;
        }

        .form-control:focus {
            border-color: #00c9a7;
            outline: none;
            box-shadow: 0 0 3px rgba(0, 201, 167, 0.4);
        }

        .radio-group {
            display: inline-flex;
            padding-left: 7rem;
            gap: 30px;
        }

        .btn {
            padding: 6px 10px;
            font-weight: bold;
            text-decoration: none;
            cursor: pointer;
            border: none;
            border-radius: 3px;
            transition: all 0.3s ease-in-out;
        }

        .btn-blue {
            background-color: #3498db;
            color: white;
        }

        .btn-blue:hover {
            background-color: #2980b9;
        }

        .btn-gray {
            background-color: #e0e0e0;
            color: black;
            margin-left: 1.2rem;
        }

        .btn-gray:hover {
            background-color: #ccc;
        }

        .btn-green {
            background-color: #00c9a7;
            color: white;
        }

        .btn-red {
            background-color: #e74c3c;
            color: white;
        }

        .text-danger {
            color: red;
        }

        .validation-message {
            margin-left: 7rem;
            margin-top: 4px;
        }

        .small {
            font-size: 0.85rem;
        }

        select.form-control {
            height: 2.5rem;
        }

        .btn-blue {
            background-color: #f8b02d !important;
        }

        .btn-blue:hover,
        .btn-blue:active {
            background-color: #e69b07 !important;
        }

        .btn-red {
            background-color: #9a3324 !important;
        }

        .btn-red:hover,
        .btn-red:active {
            background-color: #7a1f16 !important;
        }

        .custom-radio {
            position: relative;
            padding-left: 30px;
            cursor: pointer;
            user-select: none;
            font-weight: 500;
            color: #333;
        }

        .custom-radio input {
            position: absolute;
            opacity: 0;
            cursor: pointer;
        }

        .radio-mark {
            position: absolute;
            top: 65%;
            left: 0;
            transform: translateY(-50%);
            height: 14px;
            width: 14px;
            background-color: transparent;
            border: 2px solid #9a3324;
            /* viền đỏ */
            border-radius: 50%;
        }

        .custom-radio input:checked~.radio-mark {
            background-color: #f8b02d;
            /* chấm vàng */
            box-shadow: inset 0 0 0 4px white;
            /* tạo hiệu ứng chấm */
        }
    </style>
}
