@model TexasChicken.Models.KhuyenMai

@{
    ViewData["Title"] = "Thêm khuyến mãi";
    Layout = "_LayoutAdmin";
}

<div class="page-header">
    <h2>Thêm mới khuyến mãi</h2>
    <div class="top-buttons">
        <a href="/KhuyenMai/Index" class="btn btn-green">Danh sách</a>
        <button type="button" class="btn btn-red" onclick="history.back()">Trở lại</button>
    </div>
</div>

<form asp-action="Them" method="post">
    <div class="form-group">
        <label>Tên khuyến mãi: <span class="text-danger">(*)</span></label>
        <div class="form-input">
            <input asp-for="TenKM" class="form-control" placeholder="Nhập tên khuyến mãi" />
            <span asp-validation-for="TenKM" class="text-danger small validation-message"></span>
        </div>
    </div>

    <div class="form-group">
        <label>Loại khuyến mãi: <span class="text-danger">(*)</span></label>
        <div class="radio-group">
            <label>
                <input type="radio" name="LoaiKM" value="PhanTram" checked onchange="updatePlaceholder()" /> Phần trăm
                (%)
            </label>
            <label>
                <input type="radio" name="LoaiKM" value="TienMat" onchange="updatePlaceholder()" /> Tiền mặt (VNĐ)
            </label>
        </div>
    </div>

    <div class="form-group">
        <label>Giá trị khuyến mãi: <span class="text-danger">(*)</span></label>
        <div class="form-input">
            <input asp-for="GiaTri" class="form-control" id="giaTriKM" placeholder="VD: 10 (%)" />
            <span asp-validation-for="GiaTri" class="text-danger small validation-message"></span>
        </div>
    </div>

    <div class="form-group">
        <label>Ngày bắt đầu: <span class="text-danger">(*)</span></label>
        <div class="form-input">
            <input asp-for="NgayBatDau" type="date" class="form-control" />
            <span asp-validation-for="NgayBatDau" class="text-danger small validation-message"></span>
        </div>
    </div>

    <div class="form-group">
        <label>Ngày kết thúc: <span class="text-danger">(*)</span></label>
        <div class="form-input">
            <input asp-for="NgayKetThuc" type="date" class="form-control" />
            <span asp-validation-for="NgayKetThuc" class="text-danger small validation-message"></span>
        </div>
    </div>

    <div class="form-group">
        <label>Trạng Thái: <span class="text-danger">(*)</span></label>
        <div class="radio-group">
            <label class="custom-radio">
                <input type="radio" name="TrangThai" value="true" checked />
                <span class="radio-mark"></span>
                Kích hoạt
            </label>
            <label class="custom-radio">
                <input type="radio" name="TrangThai" value="false" />
                <span class="radio-mark"></span>
                Tắt
            </label>
        </div>
    </div>

    <div style="margin-top: 20px; padding-left: 310px;">
        <button type="submit" class="btn btn-blue">Thêm mới</button>
        <a href="/KhuyenMai/Index" class="btn btn-gray">Hủy</a>
    </div>
</form>

@section Scripts {
    <script>
        function updatePlaceholder() {
            const selectedType = document.querySelector('input[name="LoaiKM"]:checked').value;
            const input = document.getElementById("giaTriKM");

            if (selectedType === "PhanTram") {
                input.placeholder = "VD: 10 (%)";
            } else {
                input.placeholder = "VD: 20000 VNĐ";
            }
        }

        // Khởi động lần đầu khi trang load
        document.addEventListener("DOMContentLoaded", updatePlaceholder);
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const giaTriInput = document.getElementById("giaTriKM");
            const radioLoai = document.querySelectorAll('input[name="LoaiKM"]');

            function preventComma(e) {
                // Ngăn dấu phẩy "," và ký tự không phải số
                e.target.value = e.target.value.replace(/[^0-9]/g, '');
            }

            function updateGiaTriInput() {
                const selectedLoai = document.querySelector('input[name="LoaiKM"]:checked').value;

                if (selectedLoai === "PhanTram") {
                    giaTriInput.setAttribute("placeholder", "VD: 10 (%)");
                    giaTriInput.setAttribute("max", "100");
                    giaTriInput.setAttribute("min", "1");
                    giaTriInput.setAttribute("step", "1");
                    giaTriInput.addEventListener("input", preventComma);
                } else {
                    giaTriInput.setAttribute("placeholder", "VD: 20000 (VNĐ)");
                    giaTriInput.removeAttribute("max");
                    giaTriInput.removeAttribute("min");
                    giaTriInput.removeAttribute("step");
                    giaTriInput.removeEventListener("input", preventComma);
                }
            }

            radioLoai.forEach(r => r.addEventListener("change", updateGiaTriInput));
            updateGiaTriInput(); // gọi khi trang load
        });
    </script>
}

@section Styles {
    <style>
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
        }

        .page-header h2 {
            font-size: 24px;
            font-weight: bold;
            margin: 0;
            padding-bottom: 6px;
            display: flex;
            align-items: center;
        }

        .top-buttons {
            display: flex;
            gap: 7px;
        }

        .form-group {
            margin-bottom: 20px;
            display: flex;
            align-items: flex-start;
            border-bottom: 1px solid #eee;
            padding-bottom: 15px;
        }

        .form-group label {
            font-weight: 500;
            display: inline-block;
            width: 200px;
            padding-top: 10px;
        }

        .form-input {
            display: flex;
            flex-direction: column;
        }

        .form-control {
            width: 690px;
            padding: 13px 15px;
            border: 1px solid #ccc;
            margin-left: 7rem;
            font-size: 0.85rem;
            border-radius: 4px;
        }

        .form-control:focus {
            border-color: #00c9a7;
            outline: none;
            box-shadow: 0 0 3px rgba(0, 201, 167, 0.4);
        }

        .radio-group {
            display: inline-flex;
            padding-left: 7rem;
            gap: 30px;
        }

        .btn {
            padding: 6px 10px;
            font-weight: bold;
            text-decoration: none;
            cursor: pointer;
            border: none;
            border-radius: 3px;
            transition: all 0.3s ease-in-out;
        }

        .btn-blue {
            background-color: #3498db;
            color: white;
        }

        .btn-blue:hover {
            background-color: #2980b9;
        }

        .btn-gray {
            background-color: #e0e0e0;
            color: black;
            margin-left: 1.2rem;
        }

        .btn-gray:hover {
            background-color: #ccc;
        }

        .btn-green {
            background-color: #00c9a7;
            color: white;
        }

        .btn-red {
            background-color: #e74c3c;
            color: white;
        }

        .text-danger {
            color: red;
        }

        .validation-message {
            margin-left: 7rem;
            margin-top: 4px;
        }

        .small {
            font-size: 0.85rem;
        }

        /* ✅ Giãn dòng đẹp */
        body,
        td,
        th,
        input,
        select,
        textarea,
        label {
            line-height: 1.5;
        }

        .btn-blue {
            background-color: #f8b02d !important;
        }

        .btn-blue:hover,
        .btn-blue:active {
            background-color: #e69b07 !important;
        }

        .btn-red {
            background-color: #9a3324 !important;
        }

        .btn-red:hover,
        .btn-red:active {
            background-color: #7a1f16 !important;
        }

        .custom-radio {
            position: relative;
            padding-left: 30px;
            cursor: pointer;
            user-select: none;
            font-weight: 500;
            color: #333;
        }

        .custom-radio input {
            position: absolute;
            opacity: 0;
            cursor: pointer;
        }

        .radio-mark {
            position: absolute;
            top: 65%;
            left: 0;
            transform: translateY(-50%);
            height: 14px;
            width: 14px;
            background-color: transparent;
            border: 2px solid #9a3324;
            /* viền đỏ */
            border-radius: 50%;
        }

        .custom-radio input:checked~.radio-mark {
            background-color: #f8b02d;
            /* chấm vàng */
            box-shadow: inset 0 0 0 4px white;
            /* tạo hiệu ứng chấm */
        }
    </style>
}
