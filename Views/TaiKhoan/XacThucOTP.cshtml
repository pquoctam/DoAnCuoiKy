@{
    ViewData["Title"] = "Xác thực OTP";
}

<h2 class="otp-title">Nhập mã OTP đã gửi đến email</h2>

@if (TempData["LoiOTP"] != null)
{
    <div class="alert-error">@TempData["LoiOTP"]</div>
}

<form method="post" class="otp-form">
    <label for="otp">Mã OTP</label>
    <input type="text" id="otp" name="otp" required placeholder="Nhập mã OTP gồm 6 chữ số" maxlength="6" />
    <button type="submit" class="btn-verify"><i class="fas fa-check-circle"></i> Xác minh</button>
</form>

@section Styles {
    <style>
        .otp-title {
            text-align: center;
            margin-top: 120px;
            font-size: 30px;
            color: #9a3324;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .alert-error {
            text-align: center;
            color: #d93025;
            font-weight: bold;
            margin: 10px auto 20px;
        }

        .otp-form {
            max-width: 400px;
            margin: 30px auto 100px;
            padding: 35px 30px;
            background-color: #fff;
            border-radius: 16px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        }

        .otp-form label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: #333;
            font-size: 17px;
        }

        .otp-form input[type="text"] {
            width: 100%;
            padding: 12px 16px;
            margin-bottom: 25px;
            border: 1.5px solid #ccc;
            border-radius: 10px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

        .otp-form input[type="text"]:focus {
            border-color: #9a3324;
            box-shadow: 0 0 0 3px rgba(154, 51, 36, 0.1);
            outline: none;
        }

        .btn-verify {
            width: 100%;
            background-color: #9a3324;
            color: white;
            padding: 14px 0;
            font-size: 16px;
            font-weight: bold;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.25s ease;
        }

        .btn-verify:hover {
            background-color: #f8b02d;
            color: #000;
        }

        .btn-verify i {
            margin-right: 8px;
        }
    </style>
}
