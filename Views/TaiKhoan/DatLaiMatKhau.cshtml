<h2 class="reset-title">Đặt lại mật khẩu</h2>

<form method="post" class="reset-password-form">
    <input type="hidden" name="email" value="@ViewBag.Email" />

    <label for="matKhauMoi">Mật khẩu mới</label>
    <input type="password" id="matKhauMoi" name="matKhauMoi" required placeholder="Nhập mật khẩu mới" />

    <button type="submit" class="btn-reset">
        <i class="fas fa-lock"></i> Xác nhận
    </button>
</form>

@section Styles {
    <style>
        .reset-title {
            text-align: center;
            margin-top: 120px;
            font-size: 30px;
            color: #9a3324;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .reset-password-form {
            max-width: 400px;
            margin: 30px auto 100px;
            padding: 35px 30px;
            background-color: #fff;
            border-radius: 16px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        }

        .reset-password-form label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: #333;
            font-size: 17px;
        }

        .reset-password-form input[type="password"] {
            width: 100%;
            padding: 12px 16px;
            margin-bottom: 25px;
            border: 1.5px solid #ccc;
            border-radius: 10px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

        .reset-password-form input[type="password"]:focus {
            border-color: #9a3324;
            box-shadow: 0 0 0 3px rgba(154, 51, 36, 0.1);
            outline: none;
        }

        .btn-reset {
            width: 100%;
            background-color: #9a3324;
            color: white;
            padding: 14px 0;
            font-size: 16px;
            font-weight: bold;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.25s ease;
        }

        .btn-reset:hover {
            background-color: #f8b02d;
            color: #000;
        }

        .btn-reset i {
            margin-right: 8px;
        }
    </style>
}
